<div class="user-page">
  <h2>Display Posts by User</h2>
  <div class="user-info">
   <div class="image">
     <img src="<%= @user.photo%>" alt="<%= @user.name %>">
   </div>
   <div class="name">
     <h3 class="username"><%= @user.name %></h3>
     <p class="posts-counter">Number of posts : <%= @user.posts_counter %></p>
   </div>
  </div>

  <div class="user-bio">
      <h2>Bio</h2>
      <p class="bio"><%= @user.bio %></p>
  </div>
  
  <div class="posts-container">
    <ul>
      <% @user.recent_posts.each do |post| %>
        
        <li class="post-info">
          <h4 class="post-id">Post #<%= post.id %></h4>
          <p class="post-text"><%= link_to post.text, user_posts_path(@user), class: "links"%></p>
          <div class="stats">
            <div class="delete-container">
              <% if can?(:destroy, post) %>
                <%= button_to "Delete Post", user_post_path(@user, post), method: :delete, data: { confirm: "Delete post?" }, class: "delete-button" %>
              <% end %>
            </div>
            <div class="comments-counter">Comments: <%= post.commentscounter %></div>
            <div class="likes-counter">Likes: <%= post.likescounter %></div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>

  <div class="all-posts-button">
  <%= link_to 'See All Posts', user_posts_path(@user), id: 'posts-button' %>
  </div>
</div>

   