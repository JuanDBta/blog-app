<h1>BLOGAPP PROJECT</h1>
<h2>All Users</h2>

<div>
  <% @users.each do |user| %>
    <div class="users">
      <div class="user-info">
        <div class="image">
          <img src="<%= user.photo%>" alt="<%= user.name %>">
        </div>
        <div class="name">
          <h3><%= user.name %></h3>
          <p>Number of posts : <%= user.posts_counter %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>