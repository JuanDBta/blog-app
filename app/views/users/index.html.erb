<div class="user-page">
  <h2>All Users</h2>
  <ul class="users-list">
    <% @users.each do |user| %>
      <li class="user-info">
        <div class="image">
          <img src="<%= user.photo%>" alt="<%= user.name %>">
        </div>
        <div class="name">
          <h3 class="username"><%= link_to user.name, user_path(user), class:"links" %></h3>
          <p class="posts-counter">Number of posts: <%= user.posts_counter %></p>
        </div>
      </li>
    <% end %>
  </ul>
</div>