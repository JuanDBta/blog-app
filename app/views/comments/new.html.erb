<%= form_with(model: [@post, Comment.new], url: user_post_comments_path(@user, @post), local: true) do |form| %>
    <div class="field">
      <%= form.label :content %>
      <%= form.text_area :content %>
    </div>
    <div class="actions">
      <%= form.submit "Create Comment" %>
    </div>
  <% end %>
  
  