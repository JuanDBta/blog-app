<%= form_with(model: @post, url: user_posts_path(@user), local: true) do |form| %>
    <div class="field">
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>
    <div class="field">
      <%= form.label :content %>
      <%= form.text_area :content %>
    </div>
    <div class="actions">
      <%= form.submit "Create Post" %>
    </div>
  <% end %>
  