<div class="form-title">
<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="new-post-title input-height">
    <%= f.label :email, class: 'label signup' %><br />
    <%= f.email_field :email, class: 'title-input login', autofocus: true, autocomplete: "email" %>
  </div>

  <div class="new-post-title input-height">
    <%= f.label :password, class: 'label signup' %><br />
    <%= f.password_field :password, class: 'title-input login', autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="new-post-title input-height">
      <%= f.check_box :remember_me, class: 'checkbox' %>
      <%= f.label :remember_me, class: 'label signup' %>
    </div>
  <% end %>

  <div class="actions signin">
    <%= f.submit "Log in", class: 'submit-button register' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>