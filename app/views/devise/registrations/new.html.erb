<div class="form-title">
<h2 >Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="new-post-title">
    <%= f.label :email, class: 'label signup' %><br />
    <%= f.email_field :email, autofocus: true, class: 'title-input', autocomplete: "email" %>
  </div>

  <div class="new-post-title">
    <%= f.label :password, class: 'label signup' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, class: 'title-input', autocomplete: "new-password" %>
  </div>

  <div class="new-post-title">
    <%= f.label :password_confirmation, class: 'label signup' %><br />
    <%= f.password_field :password_confirmation, class: 'title-input', autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: 'submit-button register' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>